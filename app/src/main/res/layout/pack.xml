<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="93dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        android:id="@+id/imageView"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pack Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/packTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:text="This is the pack description adding more text so I get a second line on the layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/packDesc" />

        <TextView
            android:text="   50 Games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numGames" />
    </LinearLayout>

</LinearLayout>